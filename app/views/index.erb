<% if current_user %>
  <div class="center clear">
    <% @blog.errors.full_messages.each do |error| %>
      <p class="error_message"><%= error %></p>
    <% end  %>
  </div>
  <div>
    <form class="form_box center" action="/users/<%= current_user.id%>" method="post">
      <div class="form">
        Blog Title
        <input type="text" name="title" value= "<%= @blog.title %>"/>
      </div>
      <div class="form">
        Blog Content
        <textarea type="text" name="body"><% @blog.body%></textarea>
      </div>
      <div class="form">
        <input type="submit" value="Blog It!!!"/>
      </div>
    </form>
  </div>
  <% current_user.blogs.each do |blog| %>
  <div class="container">
    <p><a href="<%="/users/#{current_user.id}/blogs/#{blog.id}"%>"><%= blog.title %></a></p>
  </div>
  <% end %>
<% end %>